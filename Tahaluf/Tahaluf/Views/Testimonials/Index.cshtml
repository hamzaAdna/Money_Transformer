@model IEnumerable<Tahaluf.Models.Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success" style="float:right;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagepath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Useracount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <img src="/images/@item.Imagepath" width="100" height="100" style="border:solid; border-radius:50px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Useracount.Id)
            </td>
            <td>
               
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                @if(item.Status=="Valid")
                {
                        <a class="btn btn-success" asp-action="AcceptCase" asp-route-id="@item.Id" hidden>Accept</a>
                        <a class="btn btn-danger" asp-action="RejectCase" asp-route-id="@item.Id" hidden>Reject</a>

                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                    }
                    else
                    {
                        <a class="btn btn-success" asp-action="AcceptCase" asp-route-id="@item.Id" >Accept</a>
                        <a class="btn btn-danger" asp-action="RejectCase" asp-route-id="@item.Id" >Reject</a>
                    }

            </td>
        </tr>
}
    </tbody>
</table>
